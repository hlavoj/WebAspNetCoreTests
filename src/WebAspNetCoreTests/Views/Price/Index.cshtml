@using System.Threading.Tasks
@using WebApplicationTemplate.ViewModels.Pricing
@using WebAspNetCoreTests.Services
@model GetPriceViewModel
@inject ICustomerSelectOptions CustomerSelectOptions
@inject IProductSelectOptions ProductSelectOptions


@{
    ViewBag.Title = "Pricing";
    Layout = "_Layout";
}

<h2>Pricing</h2>

<form asp-controller="Price" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="CustomerId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="CustomerId" asp-items="@CustomerSelectOptions.GetSelectListItems()" class="form-control"></select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ProductId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="ProductId" asp-items="@ProductSelectOptions.GetSelectListItems()" class="form-control"></select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-danger">Get price</button>
        </div>
    </div>

    <h2>Price</h2>
    <div class="form-group">
        <label asp-for="Price" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <span class="form-control">@(Model?.Price?.ToString("n2") ?? "-") Kč</span>
        </div>
    </div>


</form>
